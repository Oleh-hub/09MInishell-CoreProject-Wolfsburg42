#include "minishell.h"

int	execute_cd(t_data *data, char *path)
{
	if (!path)
	{
		path = getenv("HOME");
		if (!path)
			return (printf("minishell: cd: HOME not set\n"), 1);
	}
	if (validate_and_change_directory(path))
		return (1);
	return (update_pwd(data));
}